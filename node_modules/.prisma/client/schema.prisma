generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  userId          Int      @id @default(autoincrement()) @map("user_id")
  fullName        String   @db.VarChar(40)
  email           String   @unique @db.VarChar(40)
  passwordHash    String?  @map("password_hash") @db.VarChar(200)
  avatarUrl       String?  @map("avatar_url") @db.VarChar(200)
  createTimestamp DateTime @default(now()) @map("create_timestamp")
  Post            Post[]

  Comment Comment[]

  @@map("users")
}

model Post {
  postId     Int       @id @default(autoincrement()) @map("post_id")
  text       String    @db.VarChar(10000)
  title      String    @db.VarChar(70)
  tags       String[]  @default([""]) @map("tags") @db.Text
  viewsCount Int       @default(0) @map("views_count")
  user       User      @relation(fields: [userId], references: [userId])
  userId     Int       @map("user_id")
  imageUrl   String?   @map("image_url") @db.VarChar(100)
  createdAt  DateTime  @default(now()) @map("created_at")
  Comment    Comment[]

  @@map("posts")
}

model Comment {
  commentId   Int      @id @default(autoincrement()) @map("comment_id")
  post        Post     @relation(fields: [postId], references: [postId])
  postId      Int      @map("post_id")
  user        User     @relation(fields: [userId], references: [userId])
  userId      Int      @map("user_id")
  commentText String   @map("comment_text")
  createdAt   DateTime @default(now())

  @@map("comments")
}
